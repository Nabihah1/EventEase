@* @model List<EventEase.Models.BookingViewModel> *@
@* @model EventEase.Models.BookingIdViewModel  *@
@model IEnumerable<EventEase.Models.Booking>



@{
    ViewData["Title"] = "Booking";
}

<h1>Booking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Bookings" asp-action="Index" method="get">


</form>


<table class="table">
    <thead>
        <tr>
            <th>Booking Date</th>
            <th>Event</th>
            <th>Venue</th>
     
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    
            <tr>
                <td>  @Html.DisplayFor(modelItem => item.BookingDate)</td>
                
                <td>  @Html.DisplayFor(modelItem => item.Event.EventDescription)</td>
          
                <td>  @Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
               
              


           

                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
                </td>

            </tr>


}
    </tbody>
</table>
