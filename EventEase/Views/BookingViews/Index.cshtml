<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
          @*   <th>Booking Date</th> *@
            <th>Event Name</th>
            <th>Event Description</th>
            <th>Start of Event</th>
            <th>End of Event</th>
            <th>Start Time</th>
            <th> End Time</th>
            <th>Venue Name</th>
            <th>Venue Location</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.BookingID</td>
               @*  <td>@item.BookingDate</td> *@
                <td>@item.EventName</td>
                <td>@item.EventDescription</td>
                <td>@item.StartEventDate</td>
                <td>@item.EndEventDate</td>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                <td>@item.VenueName</td>
                <td>@item.VenueLocation</td>

            </tr>


        }
    </tbody>
</table>
